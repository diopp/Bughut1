<body class="Bugs">

	<div class="container">
		<div class="card-block border-danger ">

			<table id="myTable" class="  shadow-lg p-3 mb-5 bg-white rounded table table1 table-bordered">
				<div class="card-body text-center">
					<h5 class="card-button  "></h5>
				</div>

				<div class=" shadow-lg p-3 mb-5  rounded card-header text-center text-light bg-success">BUGS</div>
				<thead class="border border-light bg-primary text-light">
					<tr class="border border-primary text-light text-center">

						<th class="">BUGS NAME</th>
						<th class="">REPORTER</th>
						<th class="">CREATED</th>
						<th class="">STATUS</th>
						<th class="">ASSIGNEE</th>
						<th class="">SEVERITY</th>
						<th class="">DETAILS</th>
						<th class="">ACTIONS</th>
						
				


					</tr>
				</thead>

				<tbody class=" text-center text-primary">
					<% bugs.forEach(function(b){ %>

					<tr class="text-dark ">

						<td><%= b.name %></td>
						<td><%= b.assigned %></td>
						<td class = 'border '> <%= moment(b.date).format('MM/DD/YYYY') %> </td>
						<td id="status" class=" badge rounded-pill bg-danger"><%= b.status %></td>
						<td><%= b.author %></td>

						<td><%= b.severity %></td>
						<td><%= b.description %></td>
						

						<td>
							<form action='/project/<%= b._id %>?_method=DELETE' method='POST'>
								<a type='button' class=" btn bi bi-pencil-fill btn-success" href="/project/<%= b._id %>/edit"></a>

								<button id="button" class="btn bi  btn-danger" type="submit" value='Delete'> Delete
							</form>


						</td>


					</tr>
					<%  }) %>
				<tbody>


			</table>


		</div>

		<script>
			window.onload = function() {
			document.getElementById("status").style.backgroundColor = "red";
			}
        </script>
